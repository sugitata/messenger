<div class="row">
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="pane-title">User List</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |u| %>
            <li><%= link_to u.email, conversations_path(user_id: u), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <ul id="conversations-list">
      <!-- 以下のループ内が全て読み込まれていない -->
      <!-- conversationが空だから -->
      <!-- conversationが空のときconversation新しく作成されないとおかしい? => createがおかしい -->
      <% pp @conversations %>
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>
</div>
